<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FORM</title>

    <style>
      * {
        margin: 0;
        padding: 0;
      }

      .wrapper {
        width: 400px;
        margin: 30px auto;
        border: 2px gray solid;
        border-radius: 5px;
        text-align: center;
      }

      .wrapper2 {
        width: 400px;
        margin: 30px auto;
        border: 2px gray solid;
        border-radius: 5px;
        text-align: center;
      }

      .form-input {
        display: block;
        margin: 15px 10px;
      }
    </style>
  </head>
  <body>
    <div class="wrapper2">
      <h1><%= post.Title%></h1>
      <img
        style="width: 100%"
        src="/<%=post.profilePic%>"
        alt="<%=post.profilePic%>"
      />
      <h1><%= post.description%></h1>

      <h3>Photo Reference</h3>

      <% post.imageList.map(item => { %>

      <a href="/<%=item%>" target="_top">
        <img style="width: 100%" src="/<%=item%>" alt="<%=item%>" />
      </a>
      <hr />
      <hr />
      <br />
      <br />

      <% }); %>
    </div>
  </body>
</html>
